{
    "manifestVersion": 1,
    "id": "VersioningTool",
    "name": "Unicus Versioning Tool",
    "version": "0.1.0",
    "publisher": "Unicus",    
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "Versioning build.",
    "categories": [
        "Build and release"
    ],
    "tags": [
        "database",
        "migration",
        "sql",
        "migrate",
        "change",
        "script"
    ],
    "content": {
        "details": {
            "path": "README.md"
        }
    },    
    "branding": {
        "color": "rgb(36, 43, 50)",
        "theme": "dark"
    },
    "icons": {
        "default": "extension-icon.png"
    },
    "files": [
        {
            "path": "task"
        }
    ],
    "contributions": [
        {
            "id": "VersioningTool",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "task"
            }
        }
    ]
}